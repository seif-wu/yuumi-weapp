.poster-background {
  position: fixed;
  width: 100vw;
}

.poster-background::before {
  position: absolute;
  top: 0;
  left: 0;
  display: inline-block;
  width: 100%;
  height: 100%;
  background: rgb(32, 35, 41);
  background: linear-gradient(to bottom, rgba(10, 14, 23, 0.6) 0%, rgba(255, 255, 255, 0) 100%);
  content: ' ';
}

/* ****************** 内容容器样式 ********************* */

.content-container {
  display: flex;
  height: 100vh;
  flex-direction: column-reverse;
}

.content-box {
  flex: 1;
  position: relative;
  margin-top: 60vh;
  background-color: #fff;
  border-top-left-radius: 56rpx;
  border-top-right-radius: 56rpx;
  box-shadow: 0px -3px 6px -4px rgba(0, 0, 0, 0.12), 0 -6px 16px 0 rgba(0, 0, 0, 0.08), 0 -9px 28px 8px rgba(0, 0, 0, 0.05);
  padding: 48rpx 32rpx;
}

