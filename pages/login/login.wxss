.background-box {
  position: fixed;
  z-index: -1;
  top: 0;
  width: 100%;
  /* background: radial-gradient(circle farthest-side at 10vw 40rpx, #bbfae8, #fff, #bbfae8); */
  background-image: linear-gradient(-225deg, #FFFEFF 0%, #D7FFFE 100%);
  height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  margin: 0 32rpx;
}

.product-desc-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.logo-box {
  position: relative;
}

.logo-login {
  top: 0;
  bottom: 0;
  width: 375rpx;
  height: 375rpx;
}

.logo {
  width: 375rpx;
  height: 375rpx;
}

.desc {
  color: rgba(0, 0, 0, 0.5);
  /* font-style: italic; */
}

/* ****************** 操作按钮样式 ******************** */

.action-box {
  margin: 32rpx 0;
  width: 100%;
  display: flex;
}

.action-box .login-action {
  flex: 1;
  display: flex;
  height: 88rpx;
  margin: 64rpx;
  color: #333;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 32rpx;
}

