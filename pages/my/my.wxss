.top-bg-container {
  width: 100%;
  height: 40vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #1E89AD;
  /* background: linear-gradient(37deg, #9FD1B6, #1E89AD); */
  background: radial-gradient(circle farthest-side at 100vw 10rpx, #1884B0, #90d8c4);
  border-bottom-right-radius: 72rpx;
  border-bottom-left-radius: 72rpx;
}

.card-container {
  margin-top: -128rpx;
}

/* *** 信息卡片样式 start *** */

.info-card {
  margin: 0 24rpx;
  padding: 32rpx;
  border-radius: 32rpx;
}

/* *** 信息卡片样式 end *** */

/* *** 个人设置样式 start *** */

.user-info-setting-box {
  display: flex;
  align-items: center;
}

.user-info-setting-box .icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 16rpx;
}

.user-info-setting-box .title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
}

.user-info-setting-box .arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

/* *** 个人设置样式 end *** */

/* *** 分割线样式 start *** */

.divider {
  width: 100%;
  min-width: 100%;
  display: flex;
  clear: both;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  color: #000000d9;
  font-size: 14px;
  font-variant: tabular-nums;
  line-height: 1.5715;
  list-style: none;
  font-feature-settings: "tnum";
  border-top: 1px solid rgba(0, 0, 0, .06);
  margin: 24rpx 0;
}

/* *** 分割线样式 end *** */

/* *** 观影数量统计样式 start *** */

.stats-box {
  margin-top: 32rpx;
}

.stats-box .title {
  display: block;
  color: #1E89AD;
  font-size: 26rpx;
  font-weight: 400;
  margin-bottom: 16rpx;
}

.stats-box .stats-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 32rpx;
  padding: 24rpx
}

/* *** 观影数量统计样式 end *** */

/* 头像样式 */
.avatar {
  width: 128rpx;
  height: 128rpx;
}

.login-tip {
  margin-top: 16rpx;
  color: #fff;
  font-size: 32rpx;
}


/* 未登录时容器样式 start */
.not-login-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: #1884B0;
  background: linear-gradient(45deg, #1884B0, #71BFA9);
  min-height: 100vh;
}

.login-box {
  min-height: 128rpx;
  margin: 0 32rpx;
  padding: 32rpx;
  background-color: #ffffff;
}

/* 未登录时容器样式 end */

/* *** 滚动容器样式 start *** */
.scroll-container {
  margin-top: 32rpx;
  height: calc(60vh - 219rpx - 128rpx);
}

/* ************************ */

.action-card {
  margin: 0 24rpx;
  padding: 32rpx;
  border-radius: 32rpx;
}

/* 内容卡片样式 start */
.content-box {
  display: flex;
  flex-direction: column;
  border-radius: 16rpx;
  background-color: #121212;
  margin: -10vh 16rpx;
  min-height: 25vh;
  padding: 32rpx;
  box-shadow: 0 3px 6px -4px rgba(0, 0, 0, 0.12), 0 6px 16px 0 rgba(0, 0, 0, 0.08), 0 9px 28px 8px rgba(0, 0, 0, 0.05);
}

/* 内容卡片样式 end */